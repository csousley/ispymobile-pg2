<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = 'http://www.w3.org/ns/widgets'
        xmlns:gap = 'http://phonegap.com/ns/1.0'
        id        = "com.ispyfire.iSpyMobile"
        version   = "1.0.5">
    <name>iSpyMobile</name>

    <description>
        Mobile companion for iSpyFire
    </description>

    <author href="http://www.ispyfire.com" email="cy@ispyfire.com">
        Cy Sousley
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

    <preference name="phonegap-version" value="3.0.0" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    
    <gap:plugin name="com.adobe.plugins.pushplugin" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    
    <access origin="*" /> 
    
    <icon src="res/icon/android/iSpyLogo_android36.png" gap:platform="android" gap:density="ldpi"  />
    <icon src="res/icon/android/iSpyLogo_android48.png" gap:platform="android" gap:density="mdpi"  />
    <icon src="res/icon/android/iSpyLogo_android72.png" gap:platform="android" gap:density="hdpi"  />
    <icon src="res/icon/android/iSpyLogo_android96.png" gap:platform="android" gap:density="xhdpi" />
    
    <icon src="res/icon/ios/iSpyLogo_iPhone57.png"  gap:platform="ios" width="57"  height="57"  />
    <icon src="res/icon/ios/iSpyLogo_iPhone72.png"  gap:platform="ios" width="72"  height="72"  />
    <icon src="res/icon/ios/iSpyLogo_iPhone114.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/ios/iSpyLogo_iPhone144.png" gap:platform="ios" width="144" height="144" />
    
    <icon src="res/icon/ios/iSpyLogo_iPhone76.png"  gap:platform="ios" width="76"  height="76"  />
    <icon src="res/icon/ios/iSpyLogo_iPhone120.png"  gap:platform="ios" width="120"  height="120"  />
    <icon src="res/icon/ios/iSpyLogo_iPhone152.png"  gap:platform="ios" width="152"  height="152"  />
    
    <gap:splash src="splash.png" />
    
    <gap:splash src="res/screen/android/splash_200x320.png"  gap:platform="android" gap:density="ldpi"  />
    <gap:splash src="res/screen/android/splash_320x480.png"  gap:platform="android" gap:density="mdpi"  />
    <gap:splash src="res/screen/android/splash_480x800.png"  gap:platform="android" gap:density="hdpi"  />
    <gap:splash src="res/screen/android/splash_720x1280.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="res/screen/ios/splash_320x480.png"    gap:platform="ios" width="320" height="480"  />
    <gap:splash src="res/screen/ios/splash_640x960.png"    gap:platform="ios" width="640" height="960"  />
    <gap:splash src="res/screen/ios/splash_640x1136.png"   gap:platform="ios" width="640" height="1136" />
    
    <gap:splash src="res/screen/ios/splash_1024x768.png"   gap:platform="ios" width="1024" height="768" />
    <gap:splash src="res/screen/ios/splash_768x1024.png"   gap:platform="ios" width="768"  height="1024" />
    <gap:splash src="res/screen/ios/splash_2048x1496.png"  gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="res/screen/ios/splash_1536x2008.png"  gap:platform="ios" width="1536" height="2008" />
    
</widget>